  </div>

  <div class="container-fluid">

        <h1>All players</h1>
  <div class="Row">
  <div class="col-md-6">
    <table>
      <th>
      Player


      </th>

      <% @players.each do |player| %>
        <tr><td><%= player[0] %></td>
        <td><%= player[1][:position] %></td>
        <td><%= player[1][:team] %></td>
      </tr>
      <% end %>
    </table>

  </div>

  </div>
